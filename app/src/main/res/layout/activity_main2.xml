<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161A20"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/navigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/calculator_navigation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#2D3440"
                android:text="@string/calculator"
                android:textColorLink="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/convertor_navigation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#0060E5"
                android:text="@string/convertor" />
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/buttons_layout"
        android:layout_below="@+id/navigator">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="64sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#363E4D"
                android:text="@string/ac"
                android:textSize="28sp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_clear"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#363E4D"
                android:text="@string/c"
                android:textSize="28sp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_perc"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#363E4D"
                android:text="%"
                android:textSize="28sp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_div"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#0060E5"
                android:text="/"
                android:textSize="28dp"
                app:cornerRadius="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_seven"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#242933"
                android:text="7"
                android:textSize="28dp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_eight"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#242933"
                android:text="8"
                android:textSize="28dp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_nine"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#242933"
                android:text="9"
                android:textSize="28dp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multi"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#0060E5"
                android:text="*"
                android:textSize="28dp"
                app:cornerRadius="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_four"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#242933"
                android:text="4"
                android:textSize="28dp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_five"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#242933"
                android:text="5"
                android:textSize="28dp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_six"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#242933"
                android:text="6"
                android:textSize="28dp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_neg"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#0060E5"
                android:text="-"
                android:textSize="28dp"
                app:cornerRadius="1dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_one"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#242933"
                android:text="1"
                android:textSize="28dp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_two"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#242933"
                android:text="2"
                android:textSize="28dp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_three"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#242933"
                android:text="3"
                android:textSize="28dp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sum"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#0060E5"
                android:text="+"
                android:textSize="28dp"
                app:cornerRadius="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="180dp"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#242933"
                android:text="0"
                android:textSize="28dp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#242933"
                android:text="."
                android:textSize="28dp"
                app:cornerRadius="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equi"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="#0060E5"
                android:text="="
                android:textSize="28dp"
                app:cornerRadius="1dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>